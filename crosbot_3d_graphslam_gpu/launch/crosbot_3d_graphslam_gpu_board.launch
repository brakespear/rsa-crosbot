<launch>
	<!--param name="use_sim_time" value="true" /-->
	
	<node pkg="image_view" type="image_view" name="globalmap_view">
      <remap from="image" to="globalImage" />
		<!--remap from="image" to="/mbicp/image" /-->
	</node>
	<node pkg="image_view" type="image_view" name="localmap_view">
      <remap from="image" to="localImage" />
	</node>
	<!--node pkg="image_view" type="image_view" name="testmap_view">
      <remap from="image" to="slamTest" />
	</node-->
	<!--node pkg="image_view" type="image_view" name="image_view">
		<remap from="image" to="/camera/rgb/image_color" />
   </node-->
	
	<node pkg="crosbot_ogmbicp" type="crosbot_ogmbicp" name="crosbot_ogmbicp" output="screen">
		<!--param name="odom_frame" value="" /-->
		<param name="base_frame" value="camera_stablized" />
      <param name="icp_frame" value="icp_test" />
      <param name="MinAddHeight" value="0.3" />
      <param name="FloorHeight" value="0.0" />
      <param name="LaserSkip" value="2" />
      <param name="CellSize" value="0.05" />
      <param name="LaserMinDist" value="0.1" />
      <param name="MaxAlignDistance" value="0.6" />
      <param name="CellSearchDistance" value="5" />
	</node>

	<node pkg="crosbot_graphslam" type="crosbot_graphslam" name="crosbot_graphslam">
		<param name="base_frame" value="camera_stablized" />
      <param name="icp_frame" value="icp_test" />
      <param name="MinAddHeight" value="0.3" />
	</node>

	<node pkg="crosbot_3d_graphslam_gpu" type="crosbot_3d_graphslam_gpu" name="crosbot_3d_graphslam_gpu">
		<param name="base_frame" value="camera_stablized" />
      <param name="CellSize" value="0.025" />
	</node>

   <node pkg="crosbot_3d_graphslam_display" type="crosbot_3d_graphslam_display" name="crosbot_3d_graphslam_display"/>

	<include file="$(find crosbot_3d_graphslam_gpu)/launch/createPointCloud.launch" />
	
</launch>	
